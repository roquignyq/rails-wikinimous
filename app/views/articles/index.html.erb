<div class="container text-justify articles">
  <h1>Your articles</h1>
  <ul class="list-unstyled">
    <% @articles.each do |article| %>
    <li>
      <h2><%= link_to article.title, article_path(article) %></h2>
      <p><%= truncate(article.content, :length => 80) %></p>
    </li>
    <% end %>
  </ul>
</div>




